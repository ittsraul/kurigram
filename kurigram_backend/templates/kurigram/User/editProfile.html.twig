{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Editar perfil</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.confirmPassword) }}

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    {{ form_end(form) }}
{% endblock %}