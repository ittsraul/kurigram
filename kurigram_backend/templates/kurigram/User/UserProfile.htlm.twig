{% extends "layout.html.twig" %}
{% block content %}
{% if is_following %}
    <form action="{{ path('unfollow', {'id': user.id}) }}" method="post">
        <button type="submit" class="btn btn-danger">Unfollow</button>
    </form>
{% else %}
    <form action="{{ path('follow', {'id': user.id}) }}" method="post">
        <button type="submit" class="btn btn-primary">Follow</button>
    </form>
{% endif %}
{% endblock %}