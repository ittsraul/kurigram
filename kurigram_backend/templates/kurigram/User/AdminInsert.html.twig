{% extends 'layout.html.twig' %}

{% block content %}
<section class="container mb-5">
	<a class="btn btn-primary mb-3" href="/twig/listUser/"> Volver</a>
	<h2>Nuevo Usuario</h2>

	<form method="post" action="" class="row g-3">
		<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
			<label for="email" class="form-label">Email del usuario</label>
			<input name="email" type="text" class="form-control" value=""/>
		</div>

		<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
			<label for="name" class="form-label">Nombre del usuario</label>
			<input name="name" type="text" class="form-control" value=""/>
		</div>

		<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
			<label for="roles" class="form-label">Rol del usuario</label>
			<select class="form-select" aria-label="Default select example" name="roles">
				<option value='["USER"]' selected>Usuario</option>
				<option value='["ADMIN"]'>Administrador</option>
			</select>
		</div>

		<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
			<label for="phone" class="form-label">Teléfono del usuario</label>
			<input name="phone" type="text" class="form-control" value=""/>
		</div>

		<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
			<label for="password" class="form-label">Contraseña del usuario</label>
			<input name="password" type="password" class="form-control" value=""/>
		</div>

		<div class="col-xl-5 col-lg-5 col-md-6 col-sm-8">
			<input type="submit" class="btn btn-primary mb-3 col-lg-12" name="submit" value="Crear usuario"/>
		</div>
	</form>
</section>
{% endblock %}