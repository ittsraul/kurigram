{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section id="content">
	<div class="container">
		
		<a class="btn btn-primary" href="/twig/listEvent/">⇦</a>	
	<h1>Evento {{ task.getName() }}</h1>

			<form method="post" action="" class="row">
				<article class="eventList">
					<label class="form-label" for="name"> Nombre: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="name" type="text" value="{{ task.getName() }}">
					</div>

				
					<label class="form-label" for="description"> Descripción: </label>
					<div class="mb-3 col-lg-8">
						<textarea name="description" class="form-control">{{ task.getDescription() }}</textarea>
					</div>

					
					<label class="form-label" for="startDate"> fecha de comienzo: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="startDate" type="date" value="{{ task.getStartDate()|date('Y-m-d') }}">
					</div>

					
					<label class="form-label" for="endDate"> fecha de finalización: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="endDate" type="date" value="{{ task.getEndDate()|date('Y-m-d') }}">
					</div>

					
					<label class="form-label" for="place"> Localización: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="place" type="text" value="{{ task.getPlace() }}">
					</div>
					<div class="mb-3 col-lg-8">
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Actualizar</button>
					</div>
				</article>
			</form>
    </div>
  </section>

{% endblock %}