{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section  class="container">
	<a class="btn btn-primary" href="{{path('app_Events')}}">⇦</a>
	<h1>Evento</h1>
					
					<form method="post" action="" class="row" enctype="multipart/form-data">
					
					
					<div  class="mb-3 col-lg-8">
						<label class="form-label" for="name"> Nombre: 
							<input class="form-control" name="name" type="text" value="">
						</label>
					</div>

					
					
					<div  class="mb-3 col-lg-8">
						<label class="form-label" for="description"> Descripción: 
							<textarea name="description" class="form-control"></textarea>
						</label>
					</div>

				
				
					<div <div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">	
						<label class="form-label" for="startDate"> fecha de comienzo: 
							<input class="form-control" name="startDate" type="date" value="">
						</label>
					</div>

				
					
					<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
						<label class="form-label" for="endDate"> fecha de finalización:
							<input class="form-control" name="endDate" type="date" value="">
						</label>
					</div>


					
					<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
						<label class="form-label" for="place"> Localización: 
							<input class="form-control" name="place" type="text" value="">
						</label>
					</div>


					
					
					<div class="col-xl-8 col-lg-8 col-md-10 col-sm-12">
						<label for="imagen"> Imagen: 
							<input class="form-control" type="file" name="imagen">
						</label>
					</div>
				
					<div class="col-xl-5 col-lg-5 col-md-6 col-sm-8 mt-3 mb-3">
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Crear</button>
					</div>
					
					</form>

  </section>

{% endblock %}