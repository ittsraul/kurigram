{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section id="content">
    <div class="container">
	<a class="btn btn-primary" href="/twig/listEvent/">⇦</a>
	<h1>Evento</h1>
					
					<form method="post" action="" class="row" enctype="multipart/form-data">
					<article class="eventList">
					<label class="form-label" for="name"> Nombre: </label>
					<div  class="mb-3 col-lg-8">
						<input class="form-control" name="name" type="text" value="">
					</div>

					
					<label class="form-label" for="description"> Descripción: </label>
					<div  class="mb-3 col-lg-8">
						<textarea name="description" class="form-control"></textarea>
					</div>

				
					<label class="form-label" for="startDate"> fecha de comienzo: </label>
					<div <div class="mb-3 col-lg-8">>
						<input class="form-control" name="startDate" type="date" value="">
					</div>

				
					<label class="form-label" for="endDate"> fecha de finalización: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="endDate" type="date" value="">
					</div>
					</div>

					<label class="form-label" for="place"> Localización: </label>
					<div class="mb-3 col-lg-8">>
						<input class="form-control" name="place" type="text" value="">
					</div>


					
					<label for="imagen"> Imagen: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" type="file" name="imagen">
					</div>
				
					<div  class="mb-3 col-lg-8">>
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Crear</button>
					</div>
					
					</form>
				</article>
			</div>
      </div>
    </div>
  </section>

{% endblock %}