{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section id="content">
    <div class="container">
	<a class="btn btn-primary" href="{{path('app_Post')}}">⇦</a>
	<h1 class="text-uppercase">Nuevo Post : </h1>
					
					<form method="post" action="{{path('app_insert_posts')}}" class="row" enctype="multipart/form-data">
					<article class="eventList">
					<label class="form-label" for="name"> Created at: </label>
					<div  class="mb-3 col-lg-8">
						<input class="form-control" name="created_at" type="date" value="" required>
					</div>

					<div class="mb-3 col-lg-8"><label class="form-label">text: <input type="text" class="form-control" name="text" value="" required></label></div>

					<label class="form-label" for="place"> Localización: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="place" type="text" value="">
					</div>


					
					<label for="imagen"> Imagen: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" type="file" name="imagen">
					</div>
					
				
					<div  class="mb-3 col-lg-8">
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Crear</button>
					</div>
					
					</form>
				</article>
			</div>
      </div>
    </div>
  </section>

{% endblock %}