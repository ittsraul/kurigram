{% extends 'layout.html.twig' %}

{% block content %}

<a class="btn btn-primary" href="{{ path('app_insert_posts') }}">Crear nuevo post</a>

{% if not posts %}
  <h3>No hay ning√∫n post disponible</h3>
{% else %}
  {# <p>Usuario actual: {{ user_name }} (id: {{ user_id }})</p> #}
  {% for post in posts %}
    <div class="card card-rounded" style="width: 400px; height: 300px; border: 2px solid black">
      {% if post.file %}
        <img src="{{ asset('uploads/' ~ post.file) }}" alt="imagen del post" class="card-img-top" style="height: 200px; object-fit: cover;">
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ post.title }}</h5>
        <p class="card-text">{{ post.text }}</p>
        <p class="card-text">{{ post.createdAt|date('d-m-Y H:i') }}</p>
        {# <a href="{{ path('app_like_post', {'id': post.idPost}) }}" class="btn btn-primary">Me gusta ({{ post.likes }})</a>
        <a href="{{ path('app_dislike_post', {'id': post.idPost}) }}" class="btn btn-primary">No me gusta ({{ post.dislikes }})</a> #}
      </div>
    </div>
  {% endfor %}
{% endif %}

{% endblock %}